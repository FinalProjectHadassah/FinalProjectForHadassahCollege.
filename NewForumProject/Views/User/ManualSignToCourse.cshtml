@model NewForumProject.Models.SearchSubjectViewModel

@{
    ViewBag.Title = "...";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("SignToCourse", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        </div>
        <div class="form-group">
            @Html.Label("Academy Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AcademyID", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

    <div class="form-group">
        @Html.Label("Subject Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("SubjectID", null, htmlAttributes: new { @class = "form-control" })
        </div>

    </div>

    <div class="form-group">
        @Html.Label("Lecture Type", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
           @Html.EnumDropDownListFor(model => model.LectureType, null, htmlAttributes: new { @class = "form-control" })
        </div>

    </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="רישום" class="btn btn-default" />
            </div>
        </div> 
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
